# Scanner Server Environment Configuration
# Copy this file to .env and adjust the values for your setup

# Web Interface Ports
WEB_PORT=5000
CUPS_PORT=631

# Scanner Configuration
SCANNER_IP=192.168.1.100
SCANNER_PROTOCOL=escl
SCANNER_PORT=443

# Flask Configuration
FLASK_DEBUG=0  # Set to 1 for development mode

# Gunicorn Configuration (Production Mode)
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=120
LOG_LEVEL=info

# OCR Configuration
OCR_LANGUAGE=eng

# Discord Notifications (Optional)
DISCORD_WEBHOOK_URL=

# Timezone
TZ=UTC
